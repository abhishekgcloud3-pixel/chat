# MongoDB (Atlas recommended)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<db>?retryWrites=true&w=majority

# JWT/Auth
JWT_SECRET=your-secret-key

# Gmail SMTP (OTP)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Public / Client
NEXT_PUBLIC_API_URL=http://localhost:3000

# Optional: customize the From header (defaults to GMAIL_USER)
EMAIL_FROM=

# Optional: Supabase Realtime (only if enabling Supabase features)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
